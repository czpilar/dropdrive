<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd">

    <bean id="dropdrive-cmd-propertyPlaceholder"
          class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations" value="dropdrive-core.properties" />
        <property name="ignoreUnresolvablePlaceholders" value="true" />
    </bean>

    <bean id="dropdrive-cmd-propertiesDropDriveCredential"
          class="net.czpilar.dropdrive.cmd.credential.PropertiesDropDriveCredential">
        <constructor-arg name="uploadDirPropertyKey" value="dropdrive.uploadDir" />
        <constructor-arg name="accessTokenPropertyKey" value="dropdrive.accessToken" />
        <constructor-arg name="defaultUploadDir" value="dropdrive-uploads" />
    </bean>

</beans>