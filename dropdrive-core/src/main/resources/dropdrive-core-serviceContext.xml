<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd">

    <bean id="dropdrive-core-authorizationService"
          class="net.czpilar.dropdrive.core.service.impl.AuthorizationService" />

    <bean id="dropdrive-core-fileService" class="net.czpilar.dropdrive.core.service.impl.FileService">
        <constructor-arg value="${dropdrive.file.upload.retries}" />
    </bean>

    <bean id="dropdrive-core-directoryService" class="net.czpilar.dropdrive.core.service.impl.DirectoryService" />

</beans>