<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">

    <bean id="dropdrive-core-credentialLoader" class="net.czpilar.dropdrive.core.credential.loader.CredentialLoader" />

    <alias alias="dropDriveCoreCredentialLoader" name="dropdrive-core-credentialLoader" />

    <bean id="dropdrive-core-dropDriveSetting" class="net.czpilar.dropdrive.core.setting.DropDriveSetting">
        <constructor-arg name="applicationName" value="dropdrive" />
        <constructor-arg name="applicationVersion" value="${dropdrive.version}" />
        <constructor-arg name="clientKey" value="${dropdrive.core.drive.clientKey}" />
        <constructor-arg name="clientSecret" value="${dropdrive.core.drive.clientSecret}" />
    </bean>

    <alias alias="dropDriveCoreDropDriveSetting" name="dropdrive-core-dropDriveSetting" />

</beans>